{{>header}}

{{>userLayout}}

<div>
    {{#if replies }}
        <table>
            <tr>
                <th>文章标题</th>
                <th>内容</th>
                <th>楼层</th>
                <th>时间</th>
                <th>查看</th>
            </tr>
            {{#each replies}}
            <tr>
                <td>{{PostTitle}}</td>
                <td>{{Content}}</td>
                <td>{{Floor}}</td>
                <td>{{CreatedAt}}</td>
                <td><a href="/posts/{{PostId}}">查看</a></td>
            </tr>
            {{/each}}
        </table>

    {{else}}
        暂无回复
    {{/if}}
</div>

{{>footer}}